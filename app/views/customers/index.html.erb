<h2 class="mb-3">Customers</h2>

<div class="mb-3">
  <%= link_to "Add Customer", new_customer_path, class: "btn btn-success" %>
</div>
<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th style="width: 200px;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td>
          <%= link_to "View", customer, class: "btn btn-sm btn-info" %>
          <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete",
            customer_path(customer),
            data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            },
            class: "btn btn-sm btn-danger" %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
