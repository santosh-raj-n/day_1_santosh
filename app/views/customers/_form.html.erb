<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: customer, local: true) do |form| %>

      <% if customer.errors.any? %>
        <div class="alert alert-danger">
          <% customer.errors.full_messages.each do |msg| %>
            <div><%= msg %></div>
          <% end %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter name", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", customers_path, class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>
