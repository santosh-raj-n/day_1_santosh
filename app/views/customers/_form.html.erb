<div class="row justify-content-center">
  <div class="col-md-8">

    <div class="card shadow-sm">
      <div class="card-body">

        <%= form_with(model: customer, local: true) do |f| %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label fw-semibold" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label fw-semibold" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

         <div class="mb-3">
  <%= f.label :about_me, "About me", class: "form-label fw-semibold" %>

  <div class="border rounded p-2 bg-white">
    <%= f.rich_text_area :about_me %>
  </div>
</div>



          <div class="d-flex gap-2 mt-4">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to "Cancel", customers_path, class: "btn btn-outline-secondary" %>
          </div>

        <% end %>

      </div>
    </div>

  </div>
</div>
