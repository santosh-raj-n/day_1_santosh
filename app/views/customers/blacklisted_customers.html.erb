<h2 class="mb-3">Blacklisted Customers</h2>

<div class="mb-3">
  <%= link_to "All Customers", customers_path, class: "btn btn-secondary" %>
</div>

<table class="table table-bordered table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th style="width: 200px;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @customers.any? %>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
          <td><%= customer.email %></td>
          <td>
            <%= link_to "View", customer, class: "btn btn-sm btn-info" %>
            <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-sm btn-warning" %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3" class="text-center text-muted">
          No blacklisted customers found.
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
