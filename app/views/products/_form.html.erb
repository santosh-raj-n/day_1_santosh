<div class="card shadow-sm">
  <div class="card-body">

    <%= form_with(model: product, local: true, multipart: true) do |form| %>

      <% if product.errors.any? %>
        <div class="alert alert-danger">
          <% product.errors.full_messages.each do |msg| %>
            <div><%= msg %></div>
          <% end %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-semibold" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

       <div class="mb-3">
        <%= form.label :email, class: "form-label fw-semibold" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :product_pic, "Product Image", class: "form-label fw-semibold" %>
        <%= form.file_field :product_pic, class: "form-control", accept: "image/*", multiple:true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label fw-semibold" %>
        <%= form.text_area :description, class: "form-control", rows: 3 %>
      </div>
      
      <div class="mb-3">
        <%= form.label :invoice, "Product Invoice", class: "form-label fw-semibold" %>
        <%= form.file_field :invoice, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :price, class: "form-label fw-semibold" %>
        <%= form.number_field :price, step: 0.01, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :stock, class: "form-label fw-semibold" %>
        <%= form.number_field :stock, class: "form-control" %>
      </div>

      <div class="form-check mb-3">
        <%= form.check_box :is_active, class: "form-check-input" %>
        <%= form.label :is_active, "Active", class: "form-check-label" %>
      </div>

      <!-- ActionText -->
      <div class="mb-3">
        <%= form.label :feedback, "Feedback", class: "form-label fw-semibold" %>
        <div class="border rounded p-2 bg-white">
          <%= form.rich_text_area :feedback %>
        </div>
      </div>

      <div class="d-flex gap-2 mt-3">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", products_path, class: "btn btn-outline-secondary" %>
      </div>

    <% end %>

  </div>
</div>
